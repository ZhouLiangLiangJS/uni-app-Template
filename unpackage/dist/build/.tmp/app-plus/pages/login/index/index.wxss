
.top-logo{
		width: 200rpx;
		height: 200rpx;
        position : absolute;
		top: 20%;
		left: 50%;
		-webkit-transform: translateX(-50%);
		    -ms-transform: translateX(-50%);
		        transform: translateX(-50%);
}
.login-box{
		width: 670rpx;
		height: 570rpx;
		background: #fff;
		position: absolute;
		top: 50%;
		left: 50%;
		-webkit-transform: translate(-50%,-50%);
		    -ms-transform: translate(-50%,-50%);
		        transform: translate(-50%,-50%);
}
.login-box-input{
		border-bottom:1px solid #C9C9C9;
		padding: 20rpx 0;
		margin: 0 40rpx;
}
.exit-btn{
		width: 80%;
		height: 70rpx;
		background: #F53D4A;
		color: #fff;
		letter-spacing: 1px;
		line-height: 70rpx;
		border-radius: 8px;
		margin-top: 80rpx;
		font-size:40rpx;
}
.login-box-bot{
		font-size: 30rpx;
	    margin-top: 80rpx;
		width: 100%;
		height: auto;
}

