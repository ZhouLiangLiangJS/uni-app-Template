
.hader-box{
	width: 100%;
	height: 168rpx;
	background: #F53D4A;
}
.hader-box-back{
	width: 40rpx;
	height: 40rpx;
	margin-top: 75rpx;
	margin-left: 20rpx;
}
.hader-box-text{
	color: white;
	margin-left: 240rpx;
}
.main-box{
	width: 92%;
	margin-left: 30rpx;
	border-radius: 6px;
}
.main-box-group{
	padding: 30rpx;
	margin-top: 40rpx;
	-webkit-box-shadow: 0px 0px 5px #ccc;
	        box-shadow: 0px 0px 5px #ccc;
}
.main-box-group-title{
	width: 100%;
	height: 130rpx;
}
.main-box-group-title>image{
	margin-top: 20rpx;
	width: 100rpx;
	height: 100rpx;
	border-radius: 50%;
	float: left;
}
.main-box-group-title>text{
	margin-top: 50rpx;
	margin-left: 28rpx;
	float: left;
	letter-spacing: 1px;
	font-size: 30rpx;
}
.main-box-group-content{
	width: 100%;
	overflow: hidden;
}
.main-box-group-text{
	display: -webkit-box;
	-webkit-box-orient: vertical;
	-webkit-line-clamp: 3;
	overflow: hidden;
	margin: 20rpx 0;
	letter-spacing: 1px;
	font-size: 30rpx;
	width: 100%;
}
.main-box-group-content>image{
	margin-top: 10rpx;
	margin-left: 10rpx;
	width: 200rpx;
	height: 164rpx;
	border-radius: 8px;
	float: left;
}

