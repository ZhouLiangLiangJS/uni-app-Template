<view><view class="hader-box"><image class="hader-box-back" src="https://api.laotiele.com:9527/image/static/zuo.png" data-event-opts="{{[['tap',[['back',['$event']]]]]}}" bindtap="__e"></image><text class="hader-box-text">{{title}}</text></view><view class="main-content"><view class="inpent-box"><input class="inpent-box-inp" type="text" placeholder="输入姓名" data-event-opts="{{[['input',[['__set_model',['','name','$event',[]]]]]]}}" value="{{name}}" bindinput="__e"/><view style="clear:both;"></view></view><view class="inpent-box"><input class="inpent-box-inp" type="number" placeholder="输入手机号码" data-event-opts="{{[['input',[['__set_model',['','tel','$event',[]]]]]]}}" value="{{tel}}" bindinput="__e"/><view style="clear:both;"></view></view><view data-event-opts="{{[['tap',[['openmap',['$event']]]]]}}" class="inpent-box" bindtap="__e"><view class="inpent-box-inp" style="{{(address!='选择地址'?'width: 100%;height: 50upx;':'width: 100%;height: 50upx;color:#777')}}">{{address}}</view><view style="clear:both;"></view></view><view class="inpent-box"><input class="inpent-box-inp" style="width:100%;" type="text" placeholder="详细地址(门牌号等等)" data-event-opts="{{[['input',[['__set_model',['','moreaddress','$event',[]]]]]]}}" value="{{moreaddress}}" bindinput="__e"/><view style="clear:both;"></view></view></view><button data-event-opts="{{[['tap',[['addbtn',['$event']]]]]}}" class="exit-btn" bindtap="__e">{{text==1?"确认添加":"确认修改"}}</button></view>